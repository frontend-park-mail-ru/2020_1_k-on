<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="person-page">
        <div class="person-info page-layout">
            <div class="person-info__image" style="background-image: url({data.image})"/>
            <div class="person-description">
                <div class="person-description__name">
                    <fest:value>data.name</fest:value>
                </div>

                <div class="person-description__data">
                    <div class="person-description__data_title">Дата рождения:</div>
                    <div class="person-description__data_content">
                        <fest:value>data.birthDate</fest:value>
                    </div>

                    <div class="person-description__data_title">Место рождения:</div>
                    <div class="person-description__data_content">
                        <fest:value>data.birthPlace</fest:value>
                    </div>
                </div>
            </div>
        </div>

        <div class="person-list page-layout">
            <div class="person-list__headline">
                Фильмы с участием актера
            </div>
        </div>
    </div>
</fest:template>
