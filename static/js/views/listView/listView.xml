<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="list-page page-layout">
        <div class="list-header">
            <div class="list-header__path user-path">
                <fest:for iterate="data.path" index="i" value="v">
                    <a class="movie-header__path-href user-path__href" href="{v.href}">
                        <fest:value>v.name</fest:value>
                    </a>
                    <fest:space/>/
                    <fest:space/>
                </fest:for>

                <fest:value>data.category</fest:value>
            </div>

            <div class="list-header__headline">
                <fest:value>data.category</fest:value>
            </div>
        </div>

        <div class="filters-block">
            <div class="filter-button">
                <span class="filter-button__filter-value">Все жанры</span>
                <div class="filter-button__arrow"/>
            </div>

            <div class="filter-button">
                <span class="filter-button__filter-value">Все страны</span>
                <div class="filter-button__arrow" src="static/img/down-arrow.svg"/>
            </div>

            <div class="filter-button">
                <span class="filter-button__filter-value">По популярности</span>
                <div class="filter-button__arrow" src="static/img/down-arrow.svg"/>
            </div>
        </div>

        <div class="series-block">
            <fest:for iterate="data.list" index="i" value="series">
                <a class="series-card" href="/movie">
                    <div class="series-card__image" style="background-image: url({series.image})">
                        <span class="series-card__age-limit">
                            <fest:value>series.ageLimit</fest:value>+
                        </span>
                    </div>
                    <span class="series-card__name">
                        <fest:value>series.name</fest:value>
                    </span>
                </a>
            </fest:for>
        </div>
    </div>
</fest:template>
