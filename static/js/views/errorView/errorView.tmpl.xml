<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="internal-error" style="background-image: url({data.bg_img_url});">
        <div class="auth-page__bg-shade" />
        <div class="internal-error__code">
            <fest:value>data.code</fest:value>
        </div>
        <div class="internal-error__msg">
            <fest:value>data.msg</fest:value>
        </div>
        <button class="internal-error__btn">
            Перезагрузить
        </button>
    </div>
</fest:template>
