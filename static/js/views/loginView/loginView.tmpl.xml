<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="auth-page">
        <div class="auth-page__bg-img" style="background-image: url({data.bg_img_url});"/>
        <div class="auth-page__bg-shade"/>

        <div class="auth-content">
            <h1 class="auth-content__headline">Вход в аккаунт</h1>

            <form class="auth-form" novalidate="true">
                <div class="auth-form__input_wrapper">
                    <input class="auth-form__input auth-form__input_login"
                           type="text" id="login" minlength="6"
                           autofocus="true" required="true" placeholder="Логин"/>
                    <span class="auth-form__input-border"/>
                </div>
                <div class="auth-form__input-error auth-form__input-error_login"
                     id="login_error">
                </div>

                <div class="auth-form__input_wrapper">
                    <input class="auth-form__input auth-form__input_password"
                           type="password" id="password" minlength="6"
                           required="true" placeholder="Пароль"/>
                    <span class="auth-form__input-border"/>
                    <img class="auth-form__eye" src="/static/img/eye-show.svg"/>
                </div>
                <div class="auth-form__input-error auth-form__input-error_password"
                     id="password_error">
                </div>

                <button class="auth-form__button" type="submit">
                    Войти
                </button>
            </form>

            <div class="auth-content__no-account">
                Еще нет аккаунта?
                <a class="auth-content__no-account_href" href="/signup">Зарегистрируйтесь!</a>
            </div>

        </div>
        <div class="auth-page__form-error" id="form_error">Error</div>
    </div>
</fest:template>
