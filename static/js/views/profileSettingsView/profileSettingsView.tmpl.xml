<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="user-info-wrapper">
        <div class="user-info">
            <div class="user-avatar" style="background-image: url('{data.avatar}')" onclick="this.nextSibling.click()">
                <div class="user-avatar__shade" />
                <div class="user-info__name">
                    <fest:value>data.username</fest:value>
                </div>
                <div class="user-avatar__upload">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Layer_1" x="0px" y="0px" viewBox="0 0 512 512" style="enable-background:new 0 0 512 512;" xml:space="preserve" width="32px" height="32px" class="hovered-paths"><g><circle style="fill:#CED756" cx="256" cy="256" r="256" data-original="#90BAE1" class="hovered-path active-path" data-old_color="#90BAE1"/><polygon style="fill:#1E1F23" points="141.277,216.664 211.897,216.664 211.897,428.526 300.173,428.526 300.173,216.664   370.794,216.664 256.035,93.078 " data-original="#285680" class="" data-old_color="#285680"/></g> </svg>
                </div>
                <div class="user-settings__msg">Error message</div>
            </div>
            <input class="avatar-input" type="file" id="avatar-input" accept="image/jpeg, image/png" />
            <div class="user-settings">
                <form class="auth-form" novalidate="true">
                    <div class="auth-form__input_wrapper">
                        <label class="auth-form__label" for="username">Username</label>
                        <input class="auth-form__input auth-form__input_username"
                               type="text" id="login" />
                        <span class="auth-form__input-border"/>
                    </div>
                    <div class="auth-form__input-error auth-form__input-error_login"
                         id="login_error">
                    </div>

                    <div class="auth-form__input_wrapper">
                        <label class="auth-form__label" for="email">Email</label>
                        <input class="auth-form__input auth-form__input_username"
                               type="email" id="email" />
                        <span class="auth-form__input-border"/>
                    </div>
                    <div class="auth-form__input-error auth-form__input-error_email"
                         id="email_error">
                    </div>

                    <button class="auth-form__button"
                            type="submit">Сохранить</button>
                </form>
            </div>
        </div>
    </div>
</fest:template>
