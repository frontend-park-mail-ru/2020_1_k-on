<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="user-info-wrapper">
        <div class="user-info">
            <div class="user-avatar" style="background-image: url('{data.avatar}')">
                <div class="user-avatar__shade" />
                <div class="user-avatar__name">
                    <fest:value>data.username</fest:value>
                </div>
                <div class="user-avatar__upload" onclick="this.nextSibling.click()">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Layer_1" x="0px" y="0px" viewBox="0 0 512 512" style="enable-background:new 0 0 512 512;" xml:space="preserve" width="32px" height="32px" class="hovered-paths"><g><circle style="fill:#CED756" cx="256" cy="256" r="256" data-original="#90BAE1" class="hovered-path active-path" data-old_color="#90BAE1"/><polygon style="fill:#1E1F23" points="141.277,216.664 211.897,216.664 211.897,428.526 300.173,428.526 300.173,216.664   370.794,216.664 256.035,93.078 " data-original="#285680" class="" data-old_color="#285680"/></g> </svg>
                </div>
                <input class="user-avatar__input" type="file" id="avatar-input" accept="image/jpeg, image/png, image/jpg" />
                <div class="user-avatar__msg user-avatar__msg_error" />
            </div>

            <div class="user-settings">
                <div class="data-form-container form-container" />
                <div class="user-settings__change-password">Изменить пароль</div>
            </div>
        </div>
    </div>

    <div class="modal-password-wrapper">
        <div class="modal-password">
            <svg class="modal-password__close" height="16px" viewBox="0 0 365.71733 365" width="16px" xmlns="http://www.w3.org/2000/svg"><g><path d="m356.339844 296.347656-286.613282-286.613281c-12.5-12.5-32.765624-12.5-45.246093 0l-15.105469 15.082031c-12.5 12.503906-12.5 32.769532 0 45.25l286.613281 286.613282c12.503907 12.5 32.769531 12.5 45.25 0l15.082031-15.082032c12.523438-12.480468 12.523438-32.75.019532-45.25zm0 0"/><path d="m295.988281 9.734375-286.613281 286.613281c-12.5 12.5-12.5 32.769532 0 45.25l15.082031 15.082032c12.503907 12.5 32.769531 12.5 45.25 0l286.632813-286.59375c12.503906-12.5 12.503906-32.765626 0-45.246094l-15.082032-15.082032c-12.5-12.523437-32.765624-12.523437-45.269531-.023437zm0 0"/></g></svg>
            <div class="modal-form-container" />
        </div>
        <div class="modal-error">Error</div>
    </div>
</fest:template>
