<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="page-bg">
        <div class="page-bg__img"/>
        <div class="page-bg__shade"/>
    </div>

    <div class="auth-page">
        <h1 class="headline">Регистрация</h1>
        <div class="content">
            <form class="form" novalidate="true">
                <div class="form__input-wrapper">
                    <input class="form__input form__input_login"
                           type="text" id="login" minlength="6"
                           autofocus="true" required="true" placeholder="Логин"/>
                    <span class="border"/>
                </div>
                <div class="form__error-input form__error-input_login"
                     id="login_error">Error</div>

                <div class="form__input-wrapper">
                    <input class="form__input form__input_email"
                           type="email" id="email" required="true"
                           placeholder="E-mail"/>
                    <span class="border"/>
                </div>
                <div class="form__error-input form__error-input_email"
                     id="email_error">Error</div>

                <div class="form__input-wrapper">
                    <input class="form__input auth-form__input_password"
                           type="password" id="password" minlength="6"
                           required="true" placeholder="Пароль"/>
                    <span class="border"/>
                    <img class="form__eye" src="/static/img/eye.svg"/>
                </div>
                <div class="form__error-input form__error-input_password"
                     id="password_error">Error</div>

                <button class="form__button"
                        type="submit">Зарегистрироваться</button>
            </form>
            <div class="no-account">
                Уже зарегистрированы?
                <a class="no-account__href" href="/login">Войдите в аккаунт!</a>
            </div>

        </div>
        <div class="form-error" id="form_error">Error</div>
    </div>
</fest:template>
