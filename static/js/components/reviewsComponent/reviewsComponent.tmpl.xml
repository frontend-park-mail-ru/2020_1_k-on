<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="reviews__headline">
        Отзывы
    </div>

    <fest:if test="data.reviews">
        <div class="all-reviews">
            <fest:for iterate="data.reviews" index="i" value="review">
                <fest:if test="data.userReviewId !== review.id">
                    <div class="review-block review-layout">
                        <div class="review-block__avatar">
                            <fest:attributes>
                                <fest:choose>
                                    <fest:when test="review.user.image">
                                        <fest:attribute name="style"
                                                        value="background-image: url(http://64.225.100.179:8080/image/{review.user.image})"/>
                                    </fest:when>

                                    <fest:otherwise>
                                        <fest:attribute name="style"
                                                        value="background-image: url({data.defaultAvatar})"/>
                                    </fest:otherwise>
                                </fest:choose>
                            </fest:attributes>
                        </div>

                        <div class="review-info">
                            <div class="review-info__header">
                                <div class="review-info__username">
                                    <fest:value>review.user.username</fest:value>
                                </div>

                                <div class="review-info__rate">
                                    <fest:value>review.rating</fest:value>
                                    <fest:space/>из<fest:space/>10
                                </div>
                            </div>

                            <div class="review-info__text">
                                <fest:value>review.body</fest:value>
                            </div>
                        </div>
                    </div>
                </fest:if>
            </fest:for>
        </div>
    </fest:if>

    <fest:if test="!data.reviews">
        <div class="no-reviews-message">
            Отзывов пока нет.
        </div>
    </fest:if>
</fest:template>
