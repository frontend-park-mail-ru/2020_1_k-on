{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "eqeqeq": ["error", "smart"],
        "no-magic-numbers": ["error", { "detectObjects": true, "ignoreArrayIndexes": true, "ignore": [0, 1, -1] }],
        "indent": ["error", 4],
        "keyword-spacing": "error",
        "camelcase": "error",
        "require-jsdoc": "off",
        "max-len": ["error", 100],
        "eol-last": ["error", "always"],
        "no-case-declarations": "off",
        "no-fallthrough": "off"
    }
}
