{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "parser": "babel-eslint",
//    "parserOptions": {
//        "ecmaVersion": 2018,
//        "sourceType": "module"
//    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "eqeqeq": ["error", "smart"],
        "no-magic-numbers": ["error", { "detectObjects": true, "ignoreArrayIndexes": true }],
        "indent": ["error", 4],
        "keyword-spacing": "error",
        "camelcase": "error"
    }
}
