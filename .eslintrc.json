{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "parser": "esprima",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "eqeqeq": ["error", "smart"],
        "no-magic-numbers": ["error", { "detectObjects": true, "ignoreArrayIndexes": true }],
        "indent": ["error", 4],
        "keyword-spacing": "error",
        "camelcase": "error",
        "require-jsdoc": "off"
    }
}
